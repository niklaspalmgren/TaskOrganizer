@using TaskOrganizer.AppServer.DragDrop
@using TaskOrganizer.AppServer.Services
@using TaskOrganizer.Shared
@using TaskOrganizer.AppServer.Shared
@inject ITaskManager TaskManager;

@if (TaskManager.TaskBoards.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{

    <div class="row mb-4">
        <div class="col-auto color-purple">
            <h3>Task Manager</h3>
        </div>
        
        <div class="col-auto">
            <NewTaskBoardComponent/>
        </div>
    </div>

    <div class="row mb-4">
        @foreach (var board in TaskManager.TaskBoards)
        {
            <div class="col-xxl-2 col-xl-3 col-lg-4 col-md-6 col-sm-12 col-xs-12">
                <TaskBoardComponent TaskBoard="@board" />

            </div>
        }
    </div>
}


@code {

    protected override async Task OnInitializedAsync()
    {
        await TaskManager.LoadTaskBoardsAsync();
        TaskManager.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        TaskManager.OnChange -= StateHasChanged;
    }
}
